extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Username' name='Username')
      label(for='password') Password:
      input#password.form-control(type = 'password', placeholder = 'Password' name = 'Password')
      label(for='email') E-mail:
      input#email.form-control(type = 'email', placeholder = 'E-mail' name = 'Email')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg